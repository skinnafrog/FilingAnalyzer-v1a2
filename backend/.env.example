# Financial Intelligence Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="Financial Intelligence Platform"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# RSS Feed Configuration
RSS_FEED_URL="https://www.sec.gov/cgi-bin/browse-edgar?action=getcurrent&type=&company=&dateb=&owner=include&start=0&count=40&output=atom"
RSS_POLL_INTERVAL=600  # 10 minutes in seconds
RSS_FEED_LIMIT=100

# SEC API Configuration
SEC_USER_AGENT="FinancialIntelligencePlatform/1.0 (your-email@example.com)"  # REQUIRED: Update with your email
SEC_RATE_LIMIT_DELAY=0.1  # 10 requests per second max
SEC_MAX_RETRIES=3
SEC_RETRY_DELAY=1.0

# LLM Configuration (Choose your provider)
LLM_PROVIDER=openai  # Options: openai, anthropic, azure
OPENAI_API_KEY=sk-your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-key
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
EMBEDDING_BATCH_SIZE=100

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/financial_intel
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Neo4j Configuration (Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j

# Redis Configuration (Cache & Queue)
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Celery Configuration (Task Queue)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Vector Store Configuration (Choose one)
VECTOR_DB_TYPE=qdrant  # Options: pinecone, qdrant, chroma, weaviate

# Qdrant Configuration (Default)
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=your-qdrant-api-key  # If using cloud
QDRANT_COLLECTION_NAME=sec_filings

# Pinecone Configuration (Alternative)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-environment
# PINECONE_INDEX_NAME=sec-filings

# Chroma Configuration (Alternative)
# CHROMA_HOST=localhost
# CHROMA_PORT=8000
# CHROMA_COLLECTION_NAME=sec_filings

# Weaviate Configuration (Alternative)
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your-weaviate-key

# Document Processing Configuration
DOCLING_MAX_WORKERS=4
DOCLING_ENABLE_OCR=true
DOCLING_EXTRACT_TABLES=true
DOCLING_EXTRACT_IMAGES=true
DOCLING_CHUNK_SIZE=1000
DOCLING_CHUNK_OVERLAP=200

# Graphiti Configuration
GRAPHITI_MAX_TOKENS=8000

# File Storage Configuration
FILING_STORAGE_PATH=./data/filings
PROCESSED_STORAGE_PATH=./data/processed
TEMP_STORAGE_PATH=./data/temp
MAX_FILE_SIZE_MB=100

# Processing Configuration
MAX_PROCESSING_TIME_SECONDS=120  # 2 minutes per filing
MAX_CONCURRENT_DOWNLOADS=5
MAX_CONCURRENT_PROCESSING=3
ERROR_RATE_THRESHOLD=0.05  # 5% error rate threshold

# Authentication (for future API)
JWT_SECRET_KEY=your-secret-key-change-in-production-use-strong-random-value
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=8001
ENABLE_TRACING=false
# LANGFUSE_SECRET_KEY=your-langfuse-secret
# LANGFUSE_PUBLIC_KEY=your-langfuse-public
# LANGFUSE_HOST=https://cloud.langfuse.com